                            </span>
                        </div>

                    </div>

                    <div class="flex flex-wrap justify-between gap-4">
                        <!-- Time -->
                        @php
                            $startTime = \Carbon\Carbon::parse($program->start_time)->format('g:ia');
                            $endTime = $program->end_time ? \Carbon\Carbon::parse($program->end_time)->format('g:ia') : null;
                        @endphp
                        <div class="flex items-center gap-2 min-w-[16rem]">
                            <strong class="text-black text-base font-medium tracking-tight">Time:</strong>
                            <span class="text-black text-base font-normal tracking-tight">
                                {{ $endTime ? "$startTime - $endTime" : $startTime }}
                            </span>
                        </div>

                        <!-- Coordinator -->
                        <div class="flex items-center gap-2 min-w-[12rem]">
                            <strong class="text-black text-base font-medium tracking-tight">Coordinator:</strong>
                            <span class="text-black text-base font-normal tracking-tight">
                                {{ $program->creator->name }}
                            </span>
