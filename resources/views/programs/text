                    <div class="flex flex-wrap justify-between gap-4">
                        <!-- Date -->
                        <div class="flex items-center gap-2 min-w-[16rem]">
                            <strong class="text-black text-base font-medium tracking-tight">Date:</strong>
                            <span class="text-black text-base font-normal tracking-tight">
                                {{ \Carbon\Carbon::parse($program->start_date)->format('F j, Y') }}
                                @if($program->end_date)
                                    - {{ \Carbon\Carbon::parse($program->end_date)->format('F j, Y') }}
                                @endif
                            </span>
                        </div>

